// Place your settings in this file to overwrite the default settings
{
  "editor.wordWrap": "on",
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "files.associations": {
    "*.html": "html"
  },
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "eslint.autoFixOnSave": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact"
  ],
  "javascript.validate.enable": false,
  "[javascriptreact]": {
    "editor.formatOnSave": false
  },
  "editor.formatOnSave": true,
}